// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id  Int @id @default(autoincrement())
  name String
  gender String
  birthDay DateTime
  chart Chat[]
  coupleId Int
  couple Couple @relation(fields: [coupleId], references: [id])
  @@index([coupleId])
}

model Couple {
  id  Int @id @default(autoincrement())
  user User[]
  channel Channel[]
}

model Chat {
  id  Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
  channelId Int
  chat Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  @@index([channelId])
}

model Channel {
  id  Int @id @default(autoincrement())
  name String
  chat Chat[]
  coupleId Int
  couple Couple @relation(fields: [coupleId], references: [id], onDelete: Cascade)
  @@index([coupleId])
}
